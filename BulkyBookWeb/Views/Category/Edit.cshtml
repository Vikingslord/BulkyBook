@model Category; //Calling directly from Model Class

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>

        <!--Server Side Validation for all required fields-->
        @*<div class="alert alert-dismissible alert-secondary" asp-validation-summary="All">
        <h5> Message: </h4>
        </div> *@


        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />


            <!--Server Side Validation-->
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />

            <!--Server Side Validation-->
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>


        </div>
        <button type="submit" class="btn btn-secondary" style="width:150px"> Update </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>


@*Client Side Validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }